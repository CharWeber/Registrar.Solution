@{
  Layout = "_Layout";
}
@* <!-- @model List<Registrar.Models.Course> --> *@
@using Registrar.Models;
<h1>Course Index</h1>

@if (Model.Count == 0)
{
  <p>there are no courses added for this semester</p>
}

<p>
@foreach (Course course in Model)
{
  @Html.ActionLink($"{course.Name}", "Details", new {id = course.CourseId})<br>
}
</p>
<hr>
<button class="btn btn-secondary"><a href="~/Courses/Create">Add a new course</a></button>