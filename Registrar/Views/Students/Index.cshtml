@{
  Layout = "_Layout";
}
@using Registrar.Models

<h1>Student List</h1>

@if (Model.Count == 0)
{
  <p>there are no Students enrolled for this semester</p>
}

<p>
@foreach (Student student in Model)
{
  @Html.ActionLink($"{student.Name}", "Details", new {id = student.StudentId})<br>
}
</p>

<button class="btn btn-secondary"><a href="~/Students/Create">Add a new student</a></button>