@{
  Layout = "_Layout";
}
@using Registrar.Models

<h1>Department List</h1>

@if (Model.Count == 0)
{
  <p>there are no departments yet registered</p>
}

<p>
  @foreach (Department department in Model)
  {
    @Html.ActionLink($"{department.Name}", "Details", new {id = department.DepartmentId})<br>
  }
</p>
<p>@Html.ActionLink("Register new Department", "Create")</p>
